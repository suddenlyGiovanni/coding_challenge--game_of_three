{
  "extends": [
    "plugin:@nrwl/nx/react",
    "../../.eslintrc.json",
    "plugin:react/recommended",
    "plugin:jest/all",
    "plugin:jsx-a11y/recommended",
    "prettier/react"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "plugins": ["jest", "import", "jsx-a11y", "react", "react-hooks"],
  "ignorePatterns": ["!**/*"],
  "rules": {
    "react/jsx-uses-react": "off",
    "react/react-in-jsx-scope": "off",
    "jest/no-hooks": "off"
  }
}
